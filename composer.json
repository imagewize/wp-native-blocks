{
  "name": "imagewize/wp-native-blocks",
  "type": "wordpress-plugin",
  "description": "Scaffold native Gutenberg blocks for WordPress block themes with per-block builds",
  "license": "MIT",
  "authors": [
    {
      "name": "Jasper Frumau",
      "email": "jasper@imagewize.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Imagewize\\WpNativeBlocks\\": "src/"
    }
  },
  "require": {
    "php": "^8.0"
  },
  "require-dev": {
    "laravel/pint": "^1.20",
    "squizlabs/php_codesniffer": "^3.10",
    "wp-coding-standards/wpcs": "^3.1",
    "phpcsstandards/phpcsutils": "^1.0"
  },
  "scripts": {
    "phpcs": "phpcs",
    "phpcbf": "phpcbf",
    "format": "vendor/bin/pint"
  },
  "keywords": [
    "wordpress",
    "gutenberg",
    "blocks",
    "block-theme",
    "fse",
    "scaffolding",
    "wp-cli"
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
